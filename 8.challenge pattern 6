c++
  #include<iostream>
using namespace std;
int main()
{
    int n;
    cout<<"Enter your no.";
    cin>>n;
    for(int i = 0; i < n ; i++)
    {
        for(int j = 0 ; j < i+1 ; j++)
        {
            cout<<"*"<<" ";
        }
        cout<<endl;
    }
}

python

n = int(input("Enter your no."))
for i in range(0,n):
    for j in range(0,i+1):
        print("*",end = " ")
    print()
